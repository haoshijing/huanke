<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huanke.iot.base.dao.device.ProductMapper">

    <sql id="tableName">
        t_product
    </sql>
    <!-- 插入一条记录 -->
    <insert id="insert" parameterType="com.huanke.iot.base.po.device.ProductPo">
        INSERT INTO <include refid="tableName"/>
        (
        key,
        name,
        createTime
        )
        VALUE (
        #{key},
        #{name},
        #{createTime}
        )
    </insert>

    <!-- 根据信息筛选返回数据 -->
    <select id="selectById" parameterType="java.lang.Integer" resultType="com.huanke.iot.base.po.device.ProductPo">
        *
        FROM <include refid="tableName"/>
        WHERE id = #{id}
    </select>
</mapper>