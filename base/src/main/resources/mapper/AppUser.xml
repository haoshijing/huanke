<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huanke.iot.base.dao.impl.user.AppUserMapper">

    <sql id="tableName">
        t_app_user
    </sql>
    <!-- 插入一条记录 -->
    <insert id="insert" parameterType="com.huanke.iot.base.po.user.AppUserPo">
        INSERT INTO <include refid="tableName"/>
        (
        openId,
        sex,
        province,
        city,
        nickname,
        headimgurl,
        unionid,
        createTime
        )
        VALUES (
        #{openId},
        #{sex},
        #{province},
        #{city},
        #{nickname},
        #{headimgurl},
        #{unionid},
        #{createTime}
        )
    </insert>

    <update id = "updateById" parameterType="com.huanke.iot.base.po.user.AppUserPo">
        update <include refid="tableName"/>
        <set>
            <if test = "unionid != null and unionid != ''">
                unionid = #{unionid},
            </if>
            <if test = "sex != null" >
                sex = #{sex},
            </if>
            <if test = "province != null and province != ''">
                province = #{province},
            </if>
            <if test = "city != null and city != ''">
                city = #{city},
            </if>
            <if test = "nickname != null and nickname != ''">
                nickname = #{nickname},
            </if>
            <if test = "headimgurl != null and headimgurl != ''">
                headimgurl = #{headimgurl},
            </if>
            <if test = "lastVisitTime != null">
                lastVisitTime = #{lastVisitTime},
            </if>
            lastUpdateTime = #{lastUpdateTime}
        </set>
        where id = #{id}
    </update>

    <!-- 根据信息筛选返回数据 -->
    <select id="selectByOpenId" parameterType="java.lang.String" resultType="com.huanke.iot.base.po.user.AppUserPo">
        SELECT
        *
        FROM <include refid="tableName"/>
        WHERE openId = #{openId}
        limit 1
    </select>

    <select id="selectById" parameterType="java.lang.Integer" resultType="com.huanke.iot.base.po.security.user.UserPo">
        select
        *
        FROM <include refid="tableName"/>
        WHERE id = #{id} limit 1
    </select>
</mapper>